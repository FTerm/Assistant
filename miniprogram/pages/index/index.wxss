page {
  overflow: hidden;
}
.header {
  position: absolute;
  z-index: -1;
  padding: 20rpx 0 0 30rpx;
  background-color: #fee45c;
  width: 100%;
  height: 300rpx;
  border-bottom-left-radius: 15%;
  border-bottom-right-radius: 15%;
}

.h1 {
  font-size: 40rpx;
  font-weight: bolder;

}

.table_contain {
  font-size: 26rpx;
  padding: 30rpx 40rpx;
}

.flex_learn {
  font-size: 30rpx;
  /* border: 1rpx solid #ccc; */
  display: flex;
  flex-direction: row;
  min-height: 70px;
  padding: 10px;
  margin: 10px;
}

.flex_learn > .flex_align:nth-of-type(2) {
  border-left: 1rpx solid #ccc;
  border-right: 1rpx solid #ccc;
}

.flex_align {
  flex: 1;
  text-align: center;
  /* font-weight: bolder; */
  /* border: 2rpx dotted #ccc; */
}

.start {
  background-color: #000000;
  color: #dbc753;
  width: 576rpx !important;
  height: 80rpx;
  display: block;
  box-sizing: border-box;
  left: 0rpx;
  top: 30rpx;
  margin-bottom: 60rpx;
}

.learntable {
  width: 637.5rpx;
  min-height: 100rpx;
  margin: 160rpx auto 0rpx;
  border-radius: 20rpx;
  background-color: #ffffff;
}

.hr {
  border-bottom: 1rpx solid #ccc;
  padding-bottom: 10rpx;
  margin-bottom: 20rpx;
}

.todotable {
  border-radius: 30rpx;
  padding: 20rpx 40rpx;
  background-color: #fee45c;
  margin: 40rpx 20rpx;
}

.label_centre {
  text-align: center;
}

.learn_text {
  font-size: 64rpx;
  color: #666666;
  position: relative;
  left: 0rpx;
  top: 20rpx
}

.toptitle {
  font-size: 30rpx;
}

.list {
  padding: 10rpx 10rpx;
}



.text_bolder {
  font-weight: bolder;
}

.label_left {
  float: left;
  width: 100%;
}


/* color */

.label_red {
  display: flex;
  flex-direction: row;
  background-color: #fd563c;
  width: fit-content;
  color: white;
}



/* - nothing */

.title {
  font-family: PingFang SC;
  font-weight: 500;
  color: #000000;
  font-size: 44rpx;
  margin-bottom: 40rpx;
}

.top_tip {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #888888;
  margin-bottom: 28rpx;
}

.power {
  margin-top: 30rpx;
  border-radius: 5px;
  background-color: white;
  width: 93%;
  padding-bottom: 1rpx;
}

.power_info {
  display: flex;
  padding: 30rpx 25rpx;
  align-items: center;
  justify-content: space-between;
}

.power_info_more {
  width: 30rpx;
  height: 30rpx;
  transform: rotate(90deg);
}

.power_info_less {
  width: 30rpx;
  height: 30rpx;
  transform: rotate(270deg);
}

.power_info_text {
  display: flex;
  flex-direction: column;
}

.power_info_text_title {
  margin-bottom: 10rpx;
  font-weight: 400;
  font-size: 35rpx;
}

.power_info_text_tip {
  color: rgba(0, 0, 0, 0.4);
  font-size: 25rpx;
}

.power_item {
  padding: 30rpx 25rpx;
  display: flex;
  justify-content: space-between;
}

.power_item_title {
  font-size: 30rpx;
}

.power_item_icon {
  width: 30rpx;
  height: 30rpx;
}

.line {
  width: 95%;
  margin: 0 auto;
  height: 2rpx;
  background-color: rgba(0, 0, 0, 0.1);
}

.environment {
  color: rgba(0, 0, 0, 0.4);
  font-size: 24rpx;
  margin-top: 25%;
}
